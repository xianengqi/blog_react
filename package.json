{
  "name": "blog_react",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "homepage": "https://xianengqi.github.io/blog_react",
  "scripts": {
    "start": "cross-env env-cmd -e dev react-app-rewired start",
    "build": "react-app-rewired build",
    "coverage": "codecov",
    "commit": "npx git-cz",
    "lint": "eslint --fix --ext tsx,ts src",
    "prettier": "prettier --write --check ./**/*.{ts,tsx,less}",
    "prebuild": "npm run lint && rimraf ./dist"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run prettier",
      "pre-push": "eslint --fix --ext tsx,ts src"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testMatch": [],
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/client/components/**/*.{ts,tsx}"
    ],
    "notify": true,
    "notifyMode": "always",
    "moduleNameMapper": {
      "^.+\\.(css|less|sass|scss)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "antd": "^4.4.3",
    "codecov": "^3.7.2",
    "cross-env": "^7.0.2",
    "customize-cra": "^1.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest-canvas-mock": "^2.2.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "redux-saga-routines": "^3.2.3",
    "rimraf": "^3.0.2",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "babel-plugin-import": "^1.13.0",
    "env-cmd": "^10.1.0",
    "less": "^3.12.2",
    "less-loader": "5",
    "react-app-rewired": "^2.1.6"
  },
  "prettier": {
    "endOfLine": "lf",
    "singleQuote": true
  }
}
